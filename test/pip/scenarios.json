{
    "pre-commit": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "remoteEnv": {
            "PATH": "${containerEnv:PATH}:/opt/pip/bin"
        },
        "features": {
            "pip": {
                "packages": "pre-commit",
                "location": "/opt/pip"
            }
        }
    }
}
